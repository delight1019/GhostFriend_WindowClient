<UserControl x:Class="GhostFriendClient.UserControls.TrumpCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GhostFriendClient.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="162" d:DesignWidth="100">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="15" />
            <RowDefinition Height="*" />
            <RowDefinition Height="15" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Label Content="{Binding CardValue}" Foreground="{Binding CardColor}" Width="15" HorizontalAlignment="Left"/>
        </Grid>
        <Grid Grid.Row="1">
            
        </Grid>
        <Grid Grid.Row="2">
            <Label Content="{Binding CardValue}" Foreground="{Binding CardColor}" Width="15" HorizontalAlignment="Right"/>
        </Grid>
    </Grid>
</UserControl>
