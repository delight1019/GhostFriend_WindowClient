<UserControl x:Class="GhostFriendClient.UserControls.TrumpCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GhostFriendClient.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="162" d:DesignWidth="100"
             Width="100" Height="162">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="15" />
            <RowDefinition Height="132" />
            <RowDefinition Height="15" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <TextBlock Text="{Binding CardValue}" Foreground="Black" Width="15" Height="15" HorizontalAlignment="Left" TextAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
        <Grid Grid.Row="1">
            
        </Grid>
        <Grid Grid.Row="2">
            <TextBlock Text="{Binding CardValue}" Foreground="Black" Width="15" Height="15" HorizontalAlignment="Right" TextAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</UserControl>
