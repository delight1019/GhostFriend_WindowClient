<UserControl x:Class="GhostFriendClient.UserControls.ContractGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GhostFriendClient.UserControls"
             xmlns:cvts="clr-namespace:GhostFriendClient.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.Resources>
            <cvts:WindowPropertyConverter x:Key="WindowPropertyConverter" />
        </Grid.Resources>
        <Grid Visibility="{Binding DeclareContractVisible, Converter={StaticResource WindowPropertyConverter}}">
            <TextBox Height="30" Width="200" Text="{Binding Giru}" Margin="164,210,436,210"/>
            <Button Style="{StaticResource defaultButtonStyle}" Content="PASS!"
                        Command="{Binding PassGiruCommand}" Margin="607,210,93,210"></Button>
            <Button Style="{StaticResource defaultButtonStyle}" Content="Declare Contract"
                        Command="{Binding DeclareGiruCommand}" Margin="400,210,300,210"></Button>
        </Grid>
    </Grid>
</UserControl>
